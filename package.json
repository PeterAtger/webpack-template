{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "A simple template for webpack project with Tailwind and typescript pre-configured",
  "main": "",
  "scripts": {
    "build-css": "npx tailwindcss -i ./src/styles/styles.css -o ./public/style.css",
    "watch-css": "npx tailwindcss -i ./src/styles/styles.css -o ./public/style.css --watch",
    "start": "webpack serve --open --config ./webpack.config.js --static-directory ./",
    "build": "webpack build --config ./webpack.config.js"
  },
  "author": "Peter Atef",
  "license": "ISC",
  "devDependencies": {
    "css-loader": "^6.7.3",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^8.0.0",
    "style-loader": "^3.3.1",
    "svg-url-loader": "^8.0.0",
    "tailwind-forms": "^1.0.6",
    "tailwindcss": "^3.2.4",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {}
}